{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Sync SmartAPI",
      "type": "node",
      "preLaunchTask": "build",
      "runtimeArgs": [
        "run",
        "smartapi_sync"
      ],
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "restart": false,
      "env": {
        "DEBUG": "biomedical-id-resolver,bte*"
      },
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "stopOnEntry": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Sync SmartAPI (with overrides)",
      "type": "node",
      "preLaunchTask": "build",
      "runtimeArgs": [
        "run",
        "smartapi_sync"
      ],
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "restart": false,
      "env": {
        "DEBUG": "biomedical-id-resolver,bte*",
        "API_OVERRIDE": "true"
      },
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "stopOnEntry": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Build w/o Cache",
      "type": "node",
      "runtimeArgs": [
        "run",
        "debug"
      ],
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "restart": false,
      "env": {
        "RESULT_CACHING": "false"
      },
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Build w/o Cache; No Threading",
      "type": "node",
      "runtimeArgs": [
        "run",
        "debug"
      ],
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "restart": false,
      "env": {
        "DEBUG": "biomedical-id-resolver,bte*",
        "RESULT_CACHING": "false",
        "USE_THREADING": "false"
      },
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "stopOnEntry": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Build w/ Cache",
      "type": "node",
      "preLaunchTask": "start redis",
      "runtimeArgs": [
        "run",
        "debug"
      ],
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "restart": false,
      "env": {
        "REDIS_HOST": "localhost",
        "REDIS_PORT": "6379",
        "DEBUG": "biomedical-id-resolver,bte*",
        "SMARTAPI_SYNC": "false",
        "RESULT_CACHING": "true",
      },
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "stopOnEntry": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Build w/ Cache (connect to existing)",
      "type": "node",
      "runtimeArgs": [
        "run",
        "debug"
      ],
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "restart": false,
      "env": {
        "REDIS_HOST": "localhost",
        "REDIS_PORT": "6379",
        "DEBUG": "biomedical-id-resolver,bte*",
        "SMARTAPI_SYNC": "false",
        "RESULT_CACHING": "true",
        "DEBUG_COLORS": "true"
      },
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "stopOnEntry": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Build w/ Cache Cluster",
      "type": "node",
      "preLaunchTask": "start redis cluster",
      "runtimeArgs": [
        "run",
        "debug"
      ],
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "restart": false,
      "env": {
        "REDIS_HOST": "localhost",
        "REDIS_PORT": "6379",
        "DEBUG": "biomedical-id-resolver,bte*",
        "SMARTAPI_SYNC": "false",
        "RESULT_CACHING": "true",
        "REDIS_CLUSTER": "true"
      },
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "stopOnEntry": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Build w/ Cache Cluster (connect to existing)",
      "type": "node",
      "runtimeArgs": [
        "run",
        "debug"
      ],
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "restart": false,
      "env": {
        "REDIS_HOST": "localhost",
        "REDIS_PORT": "6379",
        "DEBUG": "biomedical-id-resolver,bte*",
        "SMARTAPI_SYNC": "false",
        "RESULT_CACHING": "true",
        "REDIS_CLUSTER": "true"
      },
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "stopOnEntry": true,
      "console": "integratedTerminal"
    }
  ]
}
